{% extends '@layout/default.html.twig' %}
{% block content %}

    {% include '@app/customer/_form-element.html.twig' %}

        {% set submit = form.get('submit') %}
        {%
           do submit.setAttribute('class','btn btn-primary').setLabel('Editar')
        %}

        {% do form.setAttribute('action',url('customer.update',{id:form.getObject().id})) %}
        {% do form.prepare() %}

	<div class="row">
		<div class="col-md-8">
		  <!-- general form elements -->
		  <div class="box box-primary">
			<!-- /.box-header -->
			<!-- form start -->
			  <div class="box-body">
                              {{ form().openTag(form) | raw }}
                              {{ formHidden(form.get('_method')) }}
                                {% include '@app/customer/_form.html.twig' %}
                                <div class="box-footer">
                                    {{ formButton(submit) }}
                                </div>                                    
                                                             
                              {{ form().closeTag(form) | raw }}

			  </div>
		  </div>
	  </div>

{% endblock %}

{% block title %} 
	Edição de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
	Edição de Contato - {{ form.getObject().name }}
{% endblock %}