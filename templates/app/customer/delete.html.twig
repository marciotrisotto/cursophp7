{% extends '@layout/default.html.twig' %}
{% block content %}

	<div class="row">
		<div class="col-md-8">
		  <!-- general form elements -->
		  <div class="box box-primary">
			<!-- /.box-header -->
			<!-- form start -->
			<form name="form_disabled" role="form">
			<fieldset disabled>
			  <div class="box-body">
				<div class="form-group">
				  <label for="name">Name</label>
				  <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{ customer.name }}" />
				</div>
				<div class="form-group">
				  <label for="email">E-mail</label>
				  <input type="email" class="form-control" id="email" name="email" required="required" placeholder="E-mail" value="{{ customer.email }}" />
				</div>
			  </div>
			  <!-- /.box-body -->
			  </fieldset>
			  </form>
			  
			  <form name="form" role="form" method="post" action="{{ url('customer.delete',{id:customer.id}) }}">
			  <div class="box-footer">
				<button type="submit" class="btn btn-danger">Excluir</button>
  			    <input type="hidden" class="form-control" name="_method" value="DELETE"/>				
			  </div>
 			  </form>  
		  </div>
	  </div>

{% endblock %}

{% block title %} 
	Exclusão de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
	Exclusão de Contato - {{ customer.name }}
{% endblock %}