{% extends '@layout/default.html.twig' %}
{% block content %}

	<div class="row">
		<div class="box">
			<div class="box-header">
				<a class="btn btn-app" href="{{ url('customer.create') }}">
					<i class="fa fa-plus-circle"></i> Novo
				</a>
			</div>
			<div class="box-body">
				<table class="table tabe-bordered">
					<tbody>
						<tr>
							<th style="width:10px;">#</th>
							<th>Nome</th>
							<th>E-mail</th>
							<th>Ações</th>
						</tr>
						{% for customer in customers %}
							<tr>
								<td>{{ customer.id }}</td>
								<td>{{ customer.name }}</td>
								<td>{{ customer.email }}</td>
								<td><a href="{{ url('customer.update',{id:customer.id}) }}">Editar</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	{% block title %} 
		Listagem de Contatos - {{ parent() }}
	{% endblock %}

	{% block page_header %}
		Listagem de Customers
	{% endblock %}

{% endblock %}