{% extends '@layout/default.html.twig' %}
{% block content %}

        {% include '@app/customer/_form-element.html.twig' %}

        {% set submit = form.get('submit') %}
        {%
           do submit.setAttribute('class','btn btn-primary').setLabel('Incluir')
        %}

        {% do form.setAttribute('action',url('customer.create')) %}
        {% do form.prepare() %}
	<div class="row">
                <div class="col-md-8">
		  <!-- general form elements -->
		  <div class="box box-primary">
			<!-- /.box-header -->
			<!-- form start -->
			  <div class="box-body">
                              {{ form().openTag(form) | raw }}
                                {% include '@app/customer/_form.html.twig' %}
                                <div class="box-footer">
                                    {{ formButton(submit) }}
                                </div>                                    
                                                             
                              {{ form().closeTag(form) | raw }}

			  </div>
			  <!-- /.box-body -->
                    </div>
		 </div>
	  </div>

{% endblock %}

{% block title %} 
	Novo Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
	Cadastro de Customers
{% endblock %}